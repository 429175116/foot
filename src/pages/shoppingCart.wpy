        <view class="infoCon">
          <input type="text" bindinput="getRemarks" placeholder="填写默认信息" />
        </view>
        <view class="con"></view>
      </view>
      <view class="orderInfoCon">
        <view class="title">当前桌号</view>
        <view class="infoCon"></view>
        <view class="con">A-08</view>
      </view>
