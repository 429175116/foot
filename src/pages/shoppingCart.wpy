          <view class="info">
            <view class="title">{{ item.product_information.name }}</view>
            <view class="salesVolume">已售{{ item.product_information.sale_count }}份</view>
            <view class="price">
              <span class="originalPrice">
                ￥<p>{{ item.product_information.price }}</p>元/份
              </span>
              <span>
