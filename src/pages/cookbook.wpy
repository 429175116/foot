<script>
  import wepy from 'wepy'
  export default class cookbook extends wepy.page {
    config = {
      navigationBarTitleText: '点餐啦'
    }
    components = {//, ReceiveCoupon

    }
    data = {
      carStatus: false,
      carNum: 100,
      mynum: 20,
      product: [],
      showOrHide: 'all-hide',
      shoppingCar: {
        num: 0,
        product: []
      },
      menu: [],
      menuClass: [],
      menuClassId: 0,
      cartData: [],
      active: 'notactive',
      showSelFont: false,
      allPrice: 0,
      allNum: 0,
      nextUrl: '',
      menuClassNextUrl: '',
      addShoppingCart: ''
    }

    methods = {
      handleViewTap() {
        console.log('clicked')
      }
    }

    watch = {
      'categoryid': function (newValue, oldValue) {

      }
    }
    quantityUp(e) {
      // 商品数量
      // let num = e.currentTarget.dataset.num
      // 下标
      let index = e.currentTarget.dataset.index
      let cookDataList = this.menu
      cookDataList[index].num += 1

      this.menu = cookDataList
      let upCartDataJson = []
      let i = 0
      this.allNum = 0
      this.allPrice = 0
      for (i in cookDataList) {
        if (cookDataList[i].num > 0) {
          this.allPrice += parseFloat(cookDataList[i].discount) * cookDataList[i].num
          this.allNum += cookDataList[i].num
          // 菜品加入购物车
          upCartDataJson.push(cookDataList[i])
        }
      }
      this.cartData = upCartDataJson
      this.$apply()
    }
    quantityDown(e) {
      // 商品数量
      let num = e.currentTarget.dataset.num
      // 下标
      let index = e.currentTarget.dataset.index
      let cookDataList = this.menu
      if (num === 0) {
        return
      }
      cookDataList[index].num -= 1
      this.menu = cookDataList
      let upCartDataJson = []
      let i = 0
      this.allNum = 0
      this.allPrice = 0
      for (i in cookDataList) {
        if (cookDataList[i].num > 0) {
          this.allPrice += parseFloat(cookDataList[i].discount) * cookDataList[i].num
          this.allNum += cookDataList[i].num
          // 菜品加入购物车
          upCartDataJson.push(cookDataList[i])
        }
      }
      this.cartData = upCartDataJson
    }

    cartClick() {
      if (this.showSelFont) {
        this.showSelFont = false
      } else {
        this.showSelFont = true
        // // 计算份数
        // this.allNum = this.countAllQuantity(this.cartData)
      }
    }
    getStorage() {
      this.shoppingCar = wepy.getStorageSync('shoppingCar')
    }

    plusCount() {
      this.showOrHide = 'all-show'
    }
    // 搜索事件输入触发
    getPawData(e) {
      this.setSelData = e.detail.value
      if (this.setSelData === '') {
        return
      }
      this.menuClassId = ''
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/api/productList`,
        method: 'GET',
        data: {
          bistro_id: this.$parent.globalData.bistro_id,
          name: this.setSelData
        },
        success: data => {
          if (data.data.success) {
            // 获取用户信息,及openID  并存入全局
            this.menu = data.data.data.products
            for (let i = 0; i < this.menu.length; i++) {
              // 加入选择个数，默认为0，用于和点餐时存储数量
              this.menu[i]['num'] = 0
            }
            this.$apply()
          } else {
            wx.showModal({
              title: '',
              content: data.data.errmsg
            })
          }
        }
      })
    }
    changeMenuClass(e) {
      this.menuClassId = e.currentTarget.dataset.id
      // 获取菜单分类下的列表
      this.getMenu()
    }
    getMenu() {
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/api/listWithCategoryId`,
        method: 'GET',
        data: {
          product_category_id: this.menuClassId
        },
        success: data => {
          if (data.data.success) {
            data = data.data.data.products
            // 获取用户信息,及openID  并存入全局
            this.menu = data.data
            for (let i = 0; i < this.menu.length; i++) {
              // 加入选择个数，默认为0，用于和点餐时存储数量
              this.menu[i]['num'] = 0
            }
            this.nextUrl = ''
            if (data.meta.pagination.links.length !== 0) {
              this.nextUrl = data.meta.pagination.links.next
            }
            console.log(this.nextUrl)
            this.$apply()
          } else {
            wx.showModal({
              title: '',
              content: data.data.errmsg
            })
          }
        }
      })
    }
    // 页面上拉触底事件的处理函数
    async onReachBottom() {
      if (!this.nextUrl) {
        return
      }
      // await wepy.login().then(res => {
      //   this.code = res.code
      // })
      await wx.request({
        url: this.nextUrl,
        method: 'GET',
        data: {
          product_category_id: this.menuClassId
        },
        success: data => {
          if (data.data.success) {
            data = data.data.data.products
            // 获取用户信息,及openID  并存入全局
            let newlist = data.data
            for (let i = 0; i < newlist.length; i++) {
              // 加入选择个数，默认为0，用于和点餐时存储数量
              newlist[i]['num'] = 0
              this.menu.push(newlist[i])
            }
            this.nextUrl = ''
            if (data.meta.pagination.links.length !== 0) {
              this.nextUrl = data.meta.pagination.links.next
            }
            this.$apply()
          } else {
            wx.showModal({
              title: '',
              content: data.data.errmsg
            })
          }
        }
      })
    }
    // 数量减------
    numDown(e) {
      let menuId = e.currentTarget.dataset.id
      let num = e.currentTarget.dataset.num
      let i = 0
      for (i in this.cartData) {
        if (menuId === this.cartData[i].id) {
          this.cartData[i].num -= 1
          // 计入总价
          this.allPrice -= parseFloat(this.cartData[i].discount)
          if (num === 1) {
            this.cartData.splice(i, 1)
          }
          break
        }
      }
      // 计算份数
      this.allNum = this.countAllQuantity(this.cartData)
    }
    // 数量加++++++
    numUp(e) {
      let menuId = e.currentTarget.dataset.id
      // let num = e.currentTarget.dataset.num
      let i = 0
      for (i in this.cartData) {
        if (menuId === this.cartData[i].id) {
          this.cartData[i].num += 1
          // 计入总价
          this.allPrice += parseFloat(this.cartData[i].discount)
          break
        }
      }
      // 计算份数
      this.allNum = this.countAllQuantity(this.cartData)
    }
    // 计算份数
    countAllQuantity(numList) {
      let i = 0
      let num = 0
      for (i in numList) {
        num += numList[i].num
      }
      return num
    }
    // 清空
    delCartDataAll() {
      // 清空购物车数据
      this.cartData = []
      // 计入总价
      this.allPrice = 0
    }
    // 保存点菜数据到服务器，用于显示在订单页
    settlement() {
      // 控制结算显示隐藏
      this.cartClick()
      // wx.navigateBack({ changed: true })
      // return
      // this.cartData 已经选中的菜品
      let upCartData = []
      let cartData = this.cartData
      // 根据已经选中的菜品数据生成需要提交订单从菜品数据
      let i = 0
      for (i in cartData) {
        let cartJson = {'product_id': cartData[i].id, 'num': cartData[i].num}
        upCartData.push(cartJson)
      }
      if (this.$parent.globalData.mode) {
        this.addShoppingCart = 'addShoppingCartOneTime'
      } else {
        this.addShoppingCart = 'addShoppingCartOneTimeToOther'
      }
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/api/${this.addShoppingCart}`,
        method: 'POST',
        header: {
          AuthrizeOpenId: this.$parent.globalData.openId
        },
        // data: upCartData,
        data: {
          addlist: upCartData,
          qr_code: this.$parent.globalData.qr_code,
          open_id: this.$parent.globalData.openId
        },
        success: data => {
          if (data.data.success) {
            // 返回上一页
            if (this.$parent.globalData.mode) {
              this.$redirect('/pages/individualCart')
            } else {
              wx.navigateBack({ changed: true })
            }
          } else {
            wx.showModal({
              title: '',
              content: data.data.errmsg
            })
          }
        }
      })
      // 如果接口返回成功，则进入菜单显示页
      // this.$navigate('/pages/shoppingCart')
    }
    // productCategotyList() {
    //   let params = {
    //     bistro_id: 1
    //   }
