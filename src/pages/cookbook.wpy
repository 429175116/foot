    getMenuClass() {
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/api/productCategotyList`,
        method: 'GET',
        data: {
          bistro_id: this.$parent.globalData.bistro_id
        },
        success: data => {
          if (data.data.success) {
            data = data.data.data.product_categories
            this.menuClass = data.data
            this.menuClassId = this.menuClass[0].id
            // 获取菜单分类下的列表
            this.getMenu()
            if (data.meta.pagination.links.length !== 0) {
              this.menuClassNextUrl = data.meta.pagination.links.next
              // 加载下一页数据
              this.getMenuClassNextUrl()
            }
            this.$apply()
          } else {
            wx.showModal({
              title: '',
              content: data.data.errmsg
            })
          }
        }
      })
    }
    getMenuClassNextUrl() {
      if (this.menuClassNextUrl === '') {
        return
      }
      wx.request({
        url: this.menuClassNextUrl,
        method: 'GET',
        data: {
          bistro_id: this.$parent.globalData.bistro_id
        },
        success: data => {
          if (data.data.success) {
            data = data.data.data.product_categories
            let menuClassData = data.data
            let i = 0
            for (i in menuClassData) {
              this.menuClass.push(menuClassData[i])
            }
            console.log(this.menuClass)
            if (data.meta.pagination.links.length !== 0) {
              this.menuClassNextUrl = data.meta.pagination.links.next
              // 递归
              this.getMenuClassNextUrl()
            } else {
              this.this.menuClassNextUrl = ''
              return
            }
            this.$apply()
          } else {
            wx.showModal({
              title: '',
              content: data.data.errmsg
            })
          }
        }
      })
    }
